<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#8e44ad">
    <ImageView
        android:src="@drawable/users"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/imageViewSignUp"
        android:paddingTop="0dp" />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNewUsername"
        android:paddingTop="40dp"
        android:text="ENTER A USERNAME:" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNewUser"
        android:layout_gravity="center" />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNewEmail"
        android:paddingTop="40dp"
        android:text="ENTER A PASSWORD:" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNewEmail"
        android:layout_gravity="center"
        android:text="" />
    <TextView
        android:text="RENTER YOUR PASSWORD:"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/textViewNewPassword"
        android:paddingTop="30dp" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editNewTextPassword"
        android:layout_gravity="center" />
    <Button
        android:text="REGISTER!"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegister"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="#9b59b6"
        android:layout_marginBottom="30dp" />
</LinearLayout>